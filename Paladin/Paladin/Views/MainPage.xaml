            x:Class="Paladin.Views.MainPage">

    <!--<views:ItemsPage />
    <views:AboutPage />-->

    <TabbedPage.Children>
        <NavigationPage Icon="Helm.png">
            <x:Arguments>
                <views:CharacterPage />
